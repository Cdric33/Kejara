@model ICollection<Microsoft.AspNet.Identity.UserLoginInfo>

@if (Model.Count > 0)
{
    <h3>Connexions externes enregistrées</h3>
    <table>
        <tbody>
        @foreach (var account in Model)
{
            <tr>
                <td>@externalLogin.ProviderDisplayName</td>
                <td>
                    @if (ViewBag.ShowRemoveButton)
                    {
                        using (Html.BeginForm("Disassociate", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                @Html.Hidden("provider", account.LoginProvider)
                                @Html.Hidden("providerUserId", account.ProviderKey)
                                <input type="submit" value="Supprimer" title="Supprimer ces informations d'identification @account.LoginProvider de votre compte" />
                            </div>
                        }
                    }
                    else
                    {
                        @: &nbsp;
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
